{
	"extends": "stylelint-config-sass-guidelines",
	"rules": {
		"at-rule-empty-line-before": [
			"always", {
				"except": "after-same-name"
			}
		],
		"color-hex-case": "upper",
		"indentation": "tab",
		"no-missing-end-of-source-newline": null,
		"rule-empty-line-before": [
			"always", {
				"except": "after-rule"
			}
		],
		"string-quotes": "double"
	}
}
